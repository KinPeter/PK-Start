{
  "name": "@pk-start/monorepo",
  "version": "0.0.1",
  "description": "Personal startpage/dashboard with notes",
  "main": "-",
  "scripts": {
    "start:db": "docker-compose -f ./dev-db/docker-compose.yml up",
    "clear:db": "docker-compose -f ./dev-db/docker-compose.yml down -v",
    "dev:api": "npm run start:dev -w apps/api",
    "dev:main": "npm run setenv -- --env=dev && npm run start -w apps/main",
    "build:common": "npm run build -w libs/common",
    "build:api": "npm run build -w apps/api",
    "build:main": "npm run setenv -- --env=prod && npm run build -w apps/main",
    "start:api": "npm run start -w apps/api",
    "docker:build": "docker build -t kinpeter/start-api .",
    "docker:run": "docker run -p 8100:8100 --name pk-start3 kinpeter/start-api",
    "setenv": "node scripts/setenv.js",
    "test": "-",
    "postinstall": "npm run build -w libs/common"
  },
  "repository": {
    "type": "git",
    "url": "-"
  },
  "keywords": [
    "start",
    "dashboard",
    "notes"
  ],
  "author": "Peter Kin",
  "license": "ISC",
  "workspaces": [
    "./apps/*",
    "./libs/*"
  ],
  "engines": {
    "node": "16"
  },
  "devDependencies": {
    "dotenv": "^10.0.0",
    "yargs": "^17.0.1"
  }
}
